{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "skipLibCheck": true,
    "types": [
      "node", 
      "vite/client",
      "vite-plugin-glsl/ext"
    ],
    "jsx": "react-jsx",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/react/*": [
        "src/tsx/*"
      ],
      "@/vue/*": [
        "src/vue/*"
      ],
      "@/types/*": [
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.js", 
    "src/**/*.tsx",
    "src/**/*.jsx", 
    "src/**/*.vue",
    "types/**/*.d.ts",
    "postcss.config.mjs",
    "tailwind.config.mjs", "src/types/vue-store.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
